<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a000"
    android:padding="15dp" >

    <LinearLayout
        android:id="@+id/rrre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/bg_pop_top" >

            <TextView
                android:id="@+id/textView1111"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="세부정보 입력"
                android:textColor="@drawable/color_black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#0000"
                android:src="@drawable/s_btn_popup_x" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pop_foot"
            android:orientation="vertical"
            android:padding="8dp" >

            <EditText
                android:id="@+id/Text1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/textarea"
                android:gravity="left|top"
                android:hint="메모 입력(최대 200자)"
                android:maxLength="200"
                android:padding="6dp"
                android:textSize="15dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/checkBox_cut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:layout_marginRight="20dp"
                    android:text="@string/checkBox_cut"/>
                <CheckBox
                    android:id="@+id/checkBox_perm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:text="@string/checkBox_perm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >
                <CheckBox
                    android:id="@+id/checkBox_dyeing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:layout_marginRight="20dp"
                    android:text="@string/checkBox_dyeing"/>
                <CheckBox
                    android:id="@+id/checkBox_else"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:text="@string/checkBox_else"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/s_btn_green"
                    android:padding="10dp"
                    android:text="확인"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>